<%- include('./partials/_header.ejs'); %>
<%- include('./partials/_initAnimation.ejs'); %>

<div id='login-form' class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/workflow-mark-indigo-600.svg"
                alt="Workflow">
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Welcome Peerlab Admin
            </h2>

        </div>
        <form class="mt-8 space-y-6" action="#" method="POST">
            <input type="hidden" name="remember" value="true">
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="email-address" class="sr-only">Email address</label>
                    <input id="email-signin" name="email" type="email" autocomplete="email" required
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                        placeholder="Email address">
                </div>
                <div>
                    <label for="password" class="sr-only">Password</label>
                    <input id="pass-signin" name="password" type="password" autocomplete="current-password" required
                        class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                        placeholder="Password">
                </div>
            </div>


            <div>
                <button onclick='signIn();' type='button'
                    class="transition w-full px-4 bg-indigo-500 p-2 rounded-lg text-white hover:bg-indigo-400">Sign
                    In</button>
            </div>
        </form>
    </div>
</div>

<div id='login-warn'>
    <div>
        <center>
            <h1 class='mt-56 mb-64'>You are already signed in</h1>
        </center>
    </div>
</div>

<script>
    $(document).ready(function () {
        firebase.auth().onAuthStateChanged((user) => {
            if (user) {

                var uid = user.uid;

                $('#login-form').hide();

                $('#login-warn').show();



            }
        })
    });
</script>




